# Pirate Weather API (required)
PIRATE_WEATHER_API_KEY=your_api_key_here

# Location
LATITUDE=52.5200
LONGITUDE=13.4050

# Language for weather summaries (see https://pirateweather.net/en/latest/API/#language)
LANGUAGE=de

# Units: "si" for Celsius, "us" for Fahrenheit
UNITS=si

# Display settings
FONT_SIZE_TEMPERATURE=32
FONT_SIZE_SUMMARY=18
MIN_FONT_SIZE_SUMMARY=10
ICON_SIZE=40
PADDING=10
FLIP_DISPLAY=false

# Timing (seconds)
UPDATE_INTERVAL_SECONDS=1800

# Paths
FONT_PATH=/usr/share/fonts/truetype/dejavu/DejaVuSans-Bold.ttf
LOG_FILE=/var/log/weatherstation.log
